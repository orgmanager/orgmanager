{
    "name": "orgmanager/orgmanager",
    "description": "Supercharge you GitHub organizations!",
    "keywords": ["orgmanager", "github", "organizations", "supercharge", "invite", "invites", "php", "laravel"],
    "license": "MPL-2.0",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "adamwathan/eloquent-oauth-l5": "^0.5.1",
        "bugsnag/bugsnag-laravel": "^2.0",
        "google/recaptcha": "~1.1",
        "graham-campbell/github": "^5.1",
        "guzzlehttp/guzzle": "^6.2",
        "knplabs/github-api": "^2.2",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "^1.0",
        "m1guelpf/deploying-mode": "^1.0",
        "orgmanager/orgmanager-logos": "^1.0",
        "php-http/guzzle6-adapter": "^1.1",
        "filp/whoops": "^2.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
      "psr-4": {
            "Tests\\": "tests/"
      }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",
            "php artisan migrate --force"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize",
            "php artisan migrate --force"
        ],
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
